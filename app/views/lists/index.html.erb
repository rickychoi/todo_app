<h1>Todo Lists</h1>
<table>
  <tr>
    <th width="200" align="left">list name</th>
    <th width="50" align="left">tasks</th>
    <th>edit</th>
    <th>delete</th>
  </tr>

<% @lists.each do |lst| %>
  <tr>
    <td><%= link_to lst.name, list_path(lst) %></td>
    <td><%= lst.tasks.count %></td>
    <td><%= link_to 'Edit', edit_list_path(lst) %></td>
    <td><%= link_to 'Delete', list_path(lst), :method => :delete %></td>
  </tr>
<% end %>

  <tr>
    <td colspan="4"><br><br></td>
  </tr>
  <tr>
    <td><%= link_to 'New List', new_list_path %></td>
    <td colspan="3"></td>
  </tr>
</table>
